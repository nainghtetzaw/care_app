<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.dialogs.ProfileEmptyDialogFragment"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        android:layout_gravity="end">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCancel"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_cancel_24"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_information"
        android:layout_gravity="center_horizontal"/>

    <org.mmtextview.components.MMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="သင့်ပရိုဖိုင်တွင် အချက်အလက်များ မဖြည့်သွင်းရသေးပါ။"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <org.mmtextview.components.MMButton
        android:id="@+id/btnFillProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_component"
        android:text="ဖြည့်မည်"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

</LinearLayout>