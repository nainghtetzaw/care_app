<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nhz.doctorapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".PatientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Patient App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.ChatActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".activities.OrderMedicinesActivity" />
        <activity android:name=".activities.CaseSummaryActivity" />
        <activity android:name=".activities.CaseSummaryFormActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>