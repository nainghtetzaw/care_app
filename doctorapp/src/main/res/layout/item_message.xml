<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMessageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="50dp"
        android:layout_marginEnd="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tvMessage">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMessageProfile"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/patient_profile" />
        
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_toStartOf="@id/cardMessageProfile"
        android:background="@drawable/rounded_corner_light_blue"
        android:elevation="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="Hi, how are you?"
        android:textColor="@color/black"
        android:lineSpacingExtra="3dp"/>

</RelativeLayout>