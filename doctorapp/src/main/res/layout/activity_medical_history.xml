<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MedicalHistoryActivity"
    android:background="@color/grey_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        style="@style/Widget.AppCompat.Toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMedicalHistoryBack"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ဆေးကုသမှုမှတ်တမ်း"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivMedicalHistoryBack"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_one_time_questions"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMedicalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tv_case_answer"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="မွေးနေ့"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMedicalBd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tv_case_answer"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ဆွေးနွေးမှုပြုလုပ်သည့် ရက်စွဲ"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMedicalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="26 Nov 2020 Thur"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ဆေးကုသမှုမှတ်တမ်း"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etInputMedicalHistory"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/rounded_corner_grey_white_stroke"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="ဆေးကုသမှု မှတ်တမ်း ရေးသားရန်"
        android:textSize="14dp"
        android:gravity="top"
        android:padding="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveMedicalHistory"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="သိမ်းမည်"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_corners_blue_button"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>