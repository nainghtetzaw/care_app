<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.CaseSummaryHistoryDialogFragment">

    <org.mmtextview.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ဆေးမှတ်တမ်း"
        android:background="@drawable/rounded_corners_orange_component"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <org.mmtextview.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="လူနာအချက်အလက်"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rViewChatGeneralInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_general_patient_info"
        tools:itemCount="5"/>

    <org.mmtextview.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ရောဂါဆိုင်ရာအချက်အလက်များ"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rViewChatSpecialityInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_speciality_patient_info"
        tools:itemCount="5"/>

    <org.mmtextview.components.MMButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ပိတ်မည်"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_corners_blue_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>